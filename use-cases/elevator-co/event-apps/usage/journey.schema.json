{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eventportal.solace.cloud/apim/elevator-co/usage/journey.json",
  "type": "object",
  "title": "Elevator Co journey event payload",
  "required": [
    "header",
    "body"
  ],
  "properties": {
    "header": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "topic",
        "timestamp"
      ],
      "properties": {
        "topic": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        }
      }
    },
    "body": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "number_floors"
      ],
      "properties": {
        "type": {
          "title": "the type of journey",
          "type": "string",
          "enum": [
            "up",
            "down"
          ]
        },
        "number_floors": {
          "type": "integer"
        }
      }
    }
  }
}
