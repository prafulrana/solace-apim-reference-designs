{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eventportal.solace.cloud/apim/elevator-co/alarm.json",
  "type": "object",
  "title": "Elevator Co alarm event payload",
  "required": [
    "header",
    "body"
  ],
  "properties": {
    "header": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "topic",
        "timestamp"
      ],
      "properties": {
        "topic": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "description": "the time the alarm was generated by the asset - includes the timezone"
        }
      }
    },
    "body": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "description",
        "code",
        "severity",
        "details"
      ],
      "properties": {
        "type": {
          "title": "the type of alarm",
          "type": "string",
          "enum": [
            "car2floor_alignment",
            "max_weight_exceeded"
          ]
        },
        "description": {
          "title": "human readable alarm description",
          "type": "string"
        },
        "code": {
          "title": "alarm code",
          "type": "integer"
        },
        "severity": {
          "title": "alarm severity",
          "type": "string",
          "enum": [
            "critical",
            "non-critical"
          ]
        },
        "details": {
          "title": "alarm or fault details",
          "type": "object",
          "anyOf": [
            {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "floor",
                  "discrepancy_mm"
                ],
                "properties": {
                  "floor": {
                    "type": "integer"
                  },
                  "discrepancy_mm": {
                    "type": "integer"
                  }
                }
            },
            {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "max_weight_kg",
                  "actual_weight_kg"
                ],
                "properties": {
                  "max_weight_kg": {
                    "type": "integer"
                  },
                  "actual_weight_kg": {
                    "type": "integer"
                  }
                }
              }
          ]
        }
      }
    }
  }
}
