{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eventportal.solace.cloud/apim/elevator-co/alarm.json",
  "type": "object",
  "title": "Elevator Co fault event payload",
  "required": [
    "header",
    "body"
  ],
  "properties": {
    "header": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "topic",
        "timestamp"
      ],
      "properties": {
        "topic": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "description": "the time the fault was generated by the asset - includes the timezone"
        }
      }
    },
    "body": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "description",
        "code",
        "details"
      ],
      "properties": {
        "type": {
          "title": "the type of alarm",
          "type": "string",
          "enum": [
            "light",
            "phone"
          ]
        },
        "description": {
          "title": "human readable fault description",
          "type": "string"
        },
        "code": {
          "title": "alarm code",
          "type": "integer"
        },
        "component_id": {
          "title": "component_id the fault refers to",
          "type": "string"
        },
        "details": {
          "title": "alarm or fault details",
          "type": "object",
          "anyOf": [
            {
                "title": "details for type=light",
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "actual_lux",
                  "expected_lux",
                  "discrepancy_pct"
                ],
                "properties": {
                  "actual_lux": {
                    "type": "integer"
                  },
                  "expected_lux": {
                    "type": "integer"
                  },
                  "discrepancy_pct": {
                    "type": "integer"
                  }
                }
            },
            {
                "title": "details for type=phone",
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "num_tests_failed"
                ],
                "properties": {
                  "num_tests_failed": {
                    "type": "integer"
                  }
                }
              }
          ]
        }
      }
    }
  }
}
